<div class="row">
    {{#each notesResult}}
    <div class="col-md-3">
        <div class="card">

            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">{{title}} 
                    <form id="deleteNote" action="/notes/delete/{{_id}}" method="POST">
                        <a href="javascript:{}" onclick="document.getElementById('deleteNote').submit();"> <i class="text-danger fa fa-trash"></i></a>
                    </form>
                </h4>
                <p>{{description}}</p>
                <form action="/notes/edit/{{_id}}" method="GET">
                    <button type="submit" class="btn btn-primary btn-block btn-sm">
                        <i class="fa fa-pencil"> </i> Edit
                    </button>

                </form>

            </div>
        </div>
    </div>

    {{/each}}
</div>