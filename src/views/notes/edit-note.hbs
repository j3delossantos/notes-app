<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{notesResult._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <p>id: {{notesResult._id}}</p>
                    <input type="text" name="title" class="form-control" value="{{notesResult.title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" >{{notesResult.description}}</textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">
                        Update
                    </button>
                </div>
            
            </form>
        </div>
    </div>
</div>